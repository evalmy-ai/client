// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/anaconda
{
    "name": "evalmyai-client",
    "build": {
        "context": "..",
        "dockerfile": "Dockerfile",
        "args": {
            "USER_ID": "${localEnv:USER_ID}",
            "USER_NAME": "${localEnv:USER_NAME}",
            "USER_GID": "${localEnv:USER_GID}",
            "USER_GNAME": "${localEnv:USER_GNAME}",
            "LLM_EVALUATOR_GID": "${localEnv:LLM_EVALUATOR_GID}",
            "LLM_EVALUATOR_GNAME": "${localEnv:LLM_EVALUATOR_GNAME}",
            "DOCKER_GID": "${localEnv:DOCKER_GID}"
        }
    },
    "mounts": [
        "type=bind,source=/home/${localEnv:USER}/.ssh,target=/home/${localEnv:USER}/.ssh,readonly",
        "type=bind,source=/data/${localEnv:LLM_EVALUATOR_GNAME},target=/data/${localEnv:LLM_EVALUATOR_GNAME}",
        "type=bind,source=/home/${localEnv:USER}/.aws,target=/home/${localEnv:USER}/.aws",
        "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
    ],
    // Use 'postCreateCommand' to run commands after the container is created.
    "postCreateCommand": "make install_dev",
    // Configure tool-specific properties.
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter",
                "quarto.quarto",
                "ritwickdey.LiveServer",
                "charliermarsh.ruff",
                "njpwerner.autodocstring"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python"
            }
        }
    }
}